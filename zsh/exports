export GITHUB_USER="avidal"
export TERM="screen-256color"
export DISPLAY=:0.0
export EDITOR=nvim

# apparently setting EDITOR to vim causes zsh to switch to vim keybindings
# use bindkey -e to reset it back to normal
bindkey -e

# setup my path, preferring local cargo, then home, then system local
rust_bin=$HOME/.cargo/bin
home_path=$HOME/.local/bin:$HOME/bin
local_path=/usr/local/bin:/usr/local/sbin

export PATH=$rust_bin:$home_path:$local_path:$PATH:/usr/lib/git-core

export PGPATH=/Applications/Postgres.app/Contents/Versions/latest/bin
export GOPATH=$HOME/Code

# update path again, this time pushing up the GOPATH
export PATH=$PGPATH:$GOPATH/bin:/usr/local/opt/coreutils/libexec/gnubin:$PATH

# rust-racer needs a source distribution of rust
export RUST_SRC_PATH=~/.multirust/toolchains/nightly-x86_64-apple-darwin/lib/rustlib/src/rust/src

# dircolors isn't on the $PATH on the mbp until we add the brew gnubin path
# above
eval `dircolors ~/.dircolors`
