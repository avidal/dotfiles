[user]
    name = Alex Vidal
    email = alex.vidal@gmail.com
[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
[core]
    excludesfile = ~/.gitexcludes
    ; use the fancy diff-highlight as the pager
    pager = diff-highlight | diff-so-fancy | less --tabs=1,5 -R
[alias]
    br = branch -a
    ci = commit
    st = status -s --ignore-submodules
    co = checkout
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    root = !pwd
    rebar = !git rebase -i $(git merge-base develop HEAD)
    locals = !git branch -vv | grep \": gone]\" | awk '{ print $1 }'
[push]
    default = simple
[rerere]
    enabled = true
[mergetool "vimdiff"]
    cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[mergetool "fugitive"]
    cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[merge]
    tool = vimdiff
    prompt = false
    conflictstyle = diff3
[diff]
    tool = vimdiff
    prompt = false
[url "git@bitbucket.org:"]
    insteadOf = https://bitbucket.org/
[url "ssh://git@stash.atlassian.com:7997/"]
	insteadOf = https://stash.atlassian.com/
